<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_15"
        android:layout_marginTop="@dimen/layout_5"
        android:layout_marginEnd="@dimen/layout_15"
        android:clickable="true"
        app:cardBackgroundColor="@color/cardGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layout_5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3.9"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/jobTypeIcon"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/textViewCaseID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:gravity="center|start"
                        android:textColor="@android:color/background_light"
                        android:textSize="@dimen/font_1"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageViewAssigned"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_porter" />

                    <TextView
                        android:id="@+id/textViewAssigned"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center|start"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_hourglass" />

                    <TextView
                        android:id="@+id/textViewCreatedTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:textSize="@dimen/impt_font" />

                    <ImageView
                        android:id="@+id/startTimeIV"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_hourglass_half" />

                    <TextView
                        android:id="@+id/textViewStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:textSize="@dimen/impt_font" />

                    <ImageView
                        android:id="@+id/completedTimeIV"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_end" />

                    <TextView
                        android:id="@+id/textViewCompletedTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:textSize="@dimen/impt_font" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_weight="0.5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dateImageView"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_date_range_white_24dp" />

                    <TextView
                        android:id="@+id/textViewDateCreated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:textSize="@dimen/impt_font" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewKpi"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|end"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_sentiment_neutral_black_24dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>